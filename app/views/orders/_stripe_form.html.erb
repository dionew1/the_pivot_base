<%= form_tag(controller: :orders, action: :create) do %>

  <% unless current_user.last_cards.empty? %>
    <%= label_tag :previous_card %>
    <%= select_tag :previous_card, current_user.last_cards %>
  <% end %>

  <%= label_tag :credit_card_number %>
  <%= text_field_tag :credit_card_number %>
  
  <%= label_tag :credit_card_expiration_date %>
  <%= text_field_tag :credit_card_expiration_date %>

  <%= label_tag :CCV %>
  <%= text_field_tag :CCV %>

  <%= hidden_field_tag :amount, order.total_price %>

  <!-- shipping info -->
  <%= submit_tag "Place Order" %>
<% end %>
