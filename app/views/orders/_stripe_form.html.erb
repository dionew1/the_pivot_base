<%= form_for(@order) do |f| %>

  <% unless current_user.last_cards.empty? %>
    <%= f.label :previous_card %>
    <%= f.select :previous_card, current_user.last_cards %>
  <% end %>

  <%= f.label :credit_card_number %>
  <%= f.text_field :credit_card_number %>
  
  <%= f.label :credit_card_expiration_date %>
  <%= f.text_field :credit_card_expiration_date %>

  <%= f.label :CCV %>
  <%= f.text_field :CCV %>

  <!-- shipping info -->
  <%= f.submit "Place Order" %>
<% end %>
